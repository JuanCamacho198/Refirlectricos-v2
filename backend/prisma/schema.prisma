generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

// Models
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  orders    Order[]
  wishlists Wishlist[]
  addresses Address[]
  cart      Cart?
  reviews       Review[]
  questions     Question[]
  productViews  ProductView[]
  notifications Notification[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  message   String
  type      String   @default("INFO") // INFO, ORDER_UPDATE, REVIEW_REMINDER
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
}

model Product {
  id            String         @id @default(cuid())
  name          String
  slug          String         @unique // URL amigable
  description   String?
  price         Float
  originalPrice Float?       // Nuevo: Precio original (antes del descuento)
  promoLabel    String?      // Nuevo: Etiqueta de promoci칩n (ej: "Oferta", "Black Friday")
  stock         Int            @default(0)
  image_url     String?
  category      String         @default("General") // Nuevo: Categor칤a principal
  subcategory   String?        // Nuevo: Subcategor칤a
  brand         String?        // Nuevo: Marca del producto
  sku           String?        @unique // Nuevo: C칩digo de inventario 칰nico
  tags          String[]       // Nuevo: Etiquetas para b칰squeda flexible
  images_url    String[]       // Nuevo: Galer칤a de im치genes
  specifications Json?         // Nuevo: Especificaciones del producto [{label, value}]
  isActive      Boolean        @default(true) // Nuevo: Control de visibilidad
  orderItems    OrderItem[]
  wishlistItems WishlistItem[]
  cartItems     CartItem[]
  reviews       Review[]
  questions     Question[]
  productViews  ProductView[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Order {
  id         String      @id @default(cuid())
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  items      OrderItem[]
  total           Float       @default(0)
  status          OrderStatus @default(PENDING)
  
  // Snapshot de direcci칩n de env칤o
  shippingName    String?
  shippingPhone   String?
  shippingAddress String?
  shippingCity    String?
  shippingState   String?
  shippingZip     String?
  shippingCountry String?
  shippingNotes   String?

  // Payment information (ePayco integration)
  paymentMethod          String?   // EPAYCO, COD, NEQUI, etc.
  paymentStatus          String?   // PENDING, COMPLETED, FAILED, REJECTED, etc.
  paymentReference       String?   // ePayco x_ref_payco
  paymentApprovalCode    String?   // Bank approval code
  paymentResponseCode    String?   // ePayco response code (1=approved, 2=rejected, etc.)
  paymentResponseMessage String?   // Response description
  paymentTransactionId   String?   // ePayco transaction ID
  paymentDate            DateTime? // When payment was processed
  isTestPayment          Boolean   @default(false) // Flag for test transactions

  createdAt       DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int     @default(1)
  price     Float
}

model Wishlist {
  id        String         @id @default(cuid())
  name      String
  user      User           @relation(fields: [userId], references: [id])
  userId    String
  items     WishlistItem[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@unique([userId, name])
}

model WishlistItem {
  id         String   @id @default(cuid())
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  wishlistId String
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  addedAt    DateTime @default(now())

  @@unique([wishlistId, productId])
}

model Address {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  fullName     String
  phone        String
  addressLine1 String
  addressLine2 String?
  city         String
  state        String?
  zipCode      String?
  country      String   @default("Colombia")
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Cart {
  id        String     @id @default(cuid())
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?    @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId  String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
}


model Review {
  id        String   @id @default(cuid())
  rating    Float
  comment   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model Question {
  id        String   @id @default(cuid())
  content   String
  answer    String?
  
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  
  guestName  String?
  guestEmail String?

  product   Product  @relation(fields: [productId], references: [id])
  productId String

  isAnswered Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductView {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  viewedAt  DateTime @default(now())

  @@unique([userId, productId])
}

model StoreSettings {
  id                      String   @id @default("store-settings")
  storeName               String   @default("Refrielectricos G&E")
  supportEmail            String   @default("contacto@refrielectricos.com")
  phoneNumber             String   @default("+57 300 123 4567")
  currency                String   @default("COP")
  maintenanceMode         Boolean  @default(false)
  emailNotifications      Boolean  @default(true)
  freeShippingEnabled     Boolean  @default(true)
  freeShippingBannerText  String   @default("Env칤o gratis en Curuman칤 desde $100,000")
  freeShippingEmoji       String   @default("游뚴")
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

